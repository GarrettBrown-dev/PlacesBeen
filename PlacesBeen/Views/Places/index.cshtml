@using PlacesBeen.Models;

<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>You haven't been anywhere!</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li><a href='/places/@place.Id'>@place.Description</a></li>
  }
    
</ul>

<a href="/items/new">Add a new item.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form></ul>